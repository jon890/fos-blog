# GitHub Personal Access Token (optional, but recommended for higher rate limits)
# Create one at: https://github.com/settings/tokens
# Required scopes: public_repo (for public repositories)
GITHUB_TOKEN=your_github_token_here

# GitHub repository information
GITHUB_OWNER=jon890
GITHUB_REPO=fos-study

# MySQL Database URL (Docker Compose 사용 시)
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://fos_user:fos_password@localhost:3306/fos_blog

# Sync API Key (optional, for securing the sync endpoint)
SYNC_API_KEY=your_random_api_key_here

# Site URL (for SEO, sitemap, and canonical URLs)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Google Search Console verification code
# Get this from: https://search.google.com/search-console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_verification_code_here

# Google AdSense Publisher ID (ca-pub-XXXXXXXXXXXXXXXX)
# Get this from: https://www.google.com/adsense
NEXT_PUBLIC_GOOGLE_ADSENSE_ID=ca-pub-XXXXXXXXXXXXXXXX
